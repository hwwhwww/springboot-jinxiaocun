        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weichu.jinxiaocun.demo.mapper.yonghu.YonghuMapper">

    <select id="getYonghuById" resultType="com.weichu.jinxiaocun.demo.bean.Yonghu" >
        select
                yh_id as yhId,
                yh_yhm as yhYhm,
                yh_mm as yhMm,
                yh_xm as yhXm,
                yh_xb as yhXb,
                yh_dh as yhDh,
                yh_yx as yhYx,
                yh_dz as yhDz,
                yh_sj as yhSj,
                yh_qq as yhQq,
                yh_zt as yhZt,
                yh_ms as yhMs
        from yonghu
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getYonghuListByMap" resultType="com.weichu.jinxiaocun.demo.bean.Yonghu" parameterType="java.util.Map">
        select
                yh_id as yhId,
                yh_yhm as yhYhm,
                yh_mm as yhMm,
                yh_xm as yhXm,
                yh_xb as yhXb,
                yh_dh as yhDh,
                yh_yx as yhYx,
                yh_dz as yhDz,
                yh_sj as yhSj,
                yh_qq as yhQq,
                yh_zt as yhZt,
                yh_ms as yhMs
        from yonghu
        <trim prefix="where" prefixOverrides="and | or">
                    <if test="yhId != null and yhId!=''">
                        and yh_id=#{yhId}
                    </if>
                    <if test="yhYhm != null and yhYhm!=''">
                        and yh_yhm=#{yhYhm}
                    </if>
                    <if test="yhMm != null and yhMm!=''">
                        and yh_mm=#{yhMm}
                    </if>
                    <if test="yhXm != null and yhXm!=''">
                        and yh_xm=#{yhXm}
                    </if>
                    <if test="yhXb != null and yhXb!=''">
                        and yh_xb=#{yhXb}
                    </if>
                    <if test="yhDh != null and yhDh!=''">
                        and yh_dh=#{yhDh}
