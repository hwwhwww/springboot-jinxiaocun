    <insert id="insertYonghu" parameterType="com.weichu.jinxiaocun.demo.bean.Yonghu">
        insert into yonghu(
                        yh_id,
                        yh_yhm,
                        yh_mm,
                        yh_xm,
                        yh_xb,
                        yh_dh,
                        yh_yx,
                        yh_dz,
                        yh_sj,
                        yh_qq,
                        yh_zt,
                        yh_ms)
        values(
                     #{yhId},
                     #{yhYhm},
                     #{yhMm},
                     #{yhXm},
                     #{yhXb},
                     #{yhDh},
                     #{yhYx},
                     #{yhDz},
                     #{yhSj},
                     #{yhQq},
                     #{yhZt},
